@page "/canvas2d-showcase"
@using FoundryBlazor.Shared

<PageTitle>Canvas2D Component Showcase</PageTitle>

<div class="canvas2d-showcase">
    <h2>FoundryBlazor Canvas2D Component Demo</h2>
    <p>This page demonstrates how to integrate the Canvas2DComponent from FoundryBlazor library.</p>

    <div class="controls-section">
        <h4>Canvas Controls</h4>
        <div class="control-group">
            <label>Width: @CanvasWidth px</label>
            <input type="range" min="400" max="1600" @bind="CanvasWidth" @bind:event="oninput" />
        </div>
        <div class="control-group">
            <label>Height: @CanvasHeight px</label>
            <input type="range" min="300" max="1200" @bind="CanvasHeight" @bind:event="oninput" />
        </div>
        <div class="control-group">
            <label>Scene Name:</label>
            <input type="text" @bind="SceneName" placeholder="Enter scene name" />
        </div>
    </div>

    <div class="canvas-container">
        <h4>Canvas2DComponent in Action</h4>
        <div class="canvas-wrapper" style="width: @(CanvasWidth)px; height: @(CanvasHeight)px;">
            @* This is the primary FoundryBlazor component we're showcasing *@
            <Canvas2DComponent 
                SceneName="@SceneName" 
                CanvasWidth="@CanvasWidth" 
                CanvasHeight="@CanvasHeight" />
        </div>
    </div>

    <div class="documentation-section">
        <h4>Integration Notes</h4>
        <ul>
            <li><strong>Component:</strong> Canvas2DComponent from FoundryBlazor.Shared</li>
            <li><strong>Required Parameters:</strong> SceneName, CanvasWidth, CanvasHeight</li>
            <li><strong>Dependencies:</strong> Requires FoundryBlazor services registered in DI</li>
            <li><strong>Workspace:</strong> Automatically creates/manages workspace for the scene</li>
        </ul>
    </div>
</div>

