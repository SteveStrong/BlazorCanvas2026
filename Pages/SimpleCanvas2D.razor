@page "/simplecanvas2d"

<PageTitle>Simple Canvas2D Test</PageTitle>

<h1>Simple FoundryBlazor Canvas2D</h1>
<p>Testing Canvas2DComponent rendering - push button, see activity</p>

<div class="simple-demo">
    <div class="canvas-section">
        <h4>Canvas2DComponent Test</h4>
        <div style="border: 2px solid #007bff; padding: 10px; display: inline-block;">
            @try {
                @* Try to use the actual Canvas2DComponent from FoundryBlazor.Shared *@
                <FoundryBlazor.Shared.Canvas2DComponent 
                    SceneName="SimpleDemo" 
                    CanvasWidth="600" 
                    CanvasHeight="400" />
            }
            catch (Exception ex)
            {
                <div class="alert alert-warning">
                    <p><strong>Canvas2DComponent Error:</strong></p>
                    <p>@ex.Message</p>
                    <p class="text-muted">Service registration issue</p>
                </div>
            }
        </div>
    </div>

    <div class="controls-section">
        <h4>Simple Controls</h4>
        <button class="btn btn-primary" @onclick="DoSomething">Push Button â†’ Test Activity</button>
        <button class="btn btn-secondary" @onclick="TestServices">Test Services</button>
        
        @if (!string.IsNullOrEmpty(lastAction))
        {
            <div class="alert alert-info mt-2">
                <strong>Last Action:</strong> @lastAction
            </div>
        }
        
        @if (!string.IsNullOrEmpty(serviceInfo))
        {
            <div class="alert alert-secondary mt-2">
                <strong>Service Info:</strong> @serviceInfo
            </div>
        }
    </div>
</div>

<style>
    .simple-demo {
        display: flex;
        gap: 20px;
        align-items: flex-start;
    }
    
    .canvas-section, .controls-section {
        padding: 15px;
    }
    
    .controls-section {
        background: #f8f9fa;
        border-radius: 8px;
    }
    
    .controls-section button {
        margin-bottom: 10px;
        display: block;
        width: 200px;
    }
</style>